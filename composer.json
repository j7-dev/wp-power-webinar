{
    "name": "j7-dev/power-webinar",
    "description": "This is a boilerplate for creating a WordPress plugin with vite",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-only",
    "authors": [
        {
            "name": "JerryLiu",
            "email": "j7.dev.gg@gmail.com",
            "homepage": "https://github.com/j7-dev",
            "role": "Developer"
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "https://wpackagist.org"
        }
    ],
    "autoload": {
        "psr-4": {
            "J7\\PowerWebinar\\": "inc/src/",
            "J7\\PowerWebinarTests\\": "inc/tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "phpstan/extension-installer": true
        }
    },
    "require": {
        "j7-dev/wp-utils": "0.3.66"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "@stable",
        "wp-coding-standards/wpcs": "@stable",
        "dealerdirect/phpcodesniffer-composer-installer": "@stable",
        "phpcompatibility/php-compatibility": "@stable",
        "phpstan/phpstan": "@stable",
        "php-stubs/woocommerce-stubs": "@stable",
        "php-stubs/wordpress-stubs": "@stable",
        "phpstan/extension-installer": "@stable",
        "phpunit/phpunit": "^9.0",
        "yoast/phpunit-polyfills": "^4.0",
        "wp-phpunit/wp-phpunit": "^6.0"
    },
    "scripts": {
        "test": "vendor\\bin\\phpunit --colors=always --testdox",
        "lint": "phpcs"
    }
}